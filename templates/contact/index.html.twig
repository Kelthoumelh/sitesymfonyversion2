{% extends 'base.html.twig' %}
{% block title %}Contactez nous{% endblock %}
{% block body %}


 <div class="container mt-5 pt-5">
     <div class="row">
       <div class="col-sm-6 offset-sm-3">
         <h1 class="text-centerC">Contactez-nous</h1>
      {% for message in app.flashes('message') %}
           <div class="alert alert-success">
               {{ message }}
           </div>
       {% endfor %}
       {{ form_start(form) }}
           <div class="form-group mt-2 Cnom">
           {{ form_widget(form.nom, { attr: { placeholder: "Nom :"  } })   }}
           </div>
           <div class="form-group mt-2 Cmail">
           {{ form_widget(form.email, { attr: { placeholder: "Email :"  } }) }}
           </div>
           <div class="form-group mt-2 Cmess"> 
           {{ form_widget(form.message, { attr: { placeholder: "Message :"  } }) }}
           </div>
           <button class="btnE btn-primary mt-3">{{ button_label|default('Envoyer') }}</button>
       {{ form_end(form) }}
      </div>
     </div>
</div>
 

{% endblock %}


